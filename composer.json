        "contao/conflicts": "*@dev",
        "contao/manager-bundle": "4.9.*",
        "contao/news-bundle": "4.9.*",
        "terminal42/contao-easy_themes": "^2.2",
        "terminal42/contao-mailusername": "^1.0"
    },
    "extra": {
