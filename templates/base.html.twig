        <script src="{{ asset('files/diagdiff-theme/assets/cookie/js/cookie.min.js') }}"></script>
    {% endblock %}

</head>


<body id="top" class="out">

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div role="alert" class="alert alert-success text-center flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% block navi %}
{% endblock %}

<main role="main" class="container">
    {% block body %}
    {% endblock %}
</main>


{% block javascripts %}
    <script>
        window.cookieconsent.initialise({
            "palette": {
                "popup": {
                    "background": "#006ab3",
                    "text": "#eeeeee"
                },
                "button": {
                    "background": "#fff",
                    "text": "#006ab3"
                }
            },
            "cookie": {
                "expiryDays": {{ date('2020-07-18').diff(date()).days }},
            },
            "theme": "classic",
            "content": {
                "message": "Diese Webseite benutzt Cookies. FÃ¼r mehr Informationen:",
                "dismiss": "Einverstanden",
