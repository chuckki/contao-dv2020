{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block navi %}{% endblock %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block body %}

    {% include 'contao/_logo.html.html5' %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Registrierung</h1>

    <div class="text-center" id="userForm">

        {{ form_start(registrationForm,  {'attr': {'class': 'from-register'}}) }}

        {{ form_row(registrationForm.email, {'attr': {'autofocus': 'autofocus'}}) }}
        <label for="registration_form_password_first" class="required alert alert-danger text-black-50"><b>Nutzen Sie auf gar keinen Fall Ihr Uni-Passwort.</b></label>
        {{ form_row(registrationForm.password.first) }}
        {{ form_row(registrationForm.password.second) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button class="btn btn-lg btn-primary" type="submit">Registrieren</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block footer %}
    <div class="mb-3 text-muted text-center ">
        <nav class="mod_customnav mb-3 text-muted text-center block" itemscope=""
             itemtype="http://schema.org/SiteNavigationElement">
